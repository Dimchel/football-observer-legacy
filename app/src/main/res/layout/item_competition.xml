<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/default_horizontal_margin"
    android:paddingRight="@dimen/default_horizontal_margin"
    android:paddingTop="@dimen/default_half_vertical_margin"
    android:paddingBottom="@dimen/default_half_vertical_margin"
    >

    <TextView
        android:id="@+id/item_competition_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:paddingBottom="@dimen/default_quoter_horizontal_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/default_quoter_horizontal_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_quoter_horizontal_margin"
            android:textSize="@dimen/text_size_small"
            android:text="@string/competition_teams"
            />

        <TextView
            android:id="@+id/item_competition_matchday_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:layout_marginRight="@dimen/default_half_horizontal_margin"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_quoter_horizontal_margin"
            android:textSize="@dimen/text_size_small"
            android:text="@string/competition_matchday"
            />

        <TextView
            android:id="@+id/item_competition_teams_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/default_quoter_horizontal_margin"
            android:text="@string/competition_updated"
            android:textSize="@dimen/text_size_small"
            />

        <TextView
            android:id="@+id/item_competition_updated_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            />

    </LinearLayout>

</LinearLayout>